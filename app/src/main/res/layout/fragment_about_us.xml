<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.direct.success.markdirect.fragments.HistoricalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="none"
            >

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/card_view_1"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardBackgroundColor="#213465"
            android:elevation="15dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/image_matias"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/image_marcos"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#ffffff"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    />

                <TextView
                    android:layout_margin="10dp"
                    android:id="@+id/nombre_matias_tarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    tools:text="Marcos Valdivieso Troyano"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@id/image_matias"
                    />
                <TextView
                    android:layout_margin="10dp"
                    android:id="@+id/email_matias_tarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    tools:text="hablamos@marcosvaldi.com"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@id/image_matias"
                    android:layout_below="@id/nombre_matias_tarjeta"
                    />
                <TextView
                    android:layout_margin="10dp"
                    android:id="@+id/webs_matias_tarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    tools:text="https://www.linkedin.com/in/marcosvaldi/
https://github.com/markinhos3"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@id/image_matias"
                    android:layout_below="@id/email_matias_tarjeta"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>


</FrameLayout>