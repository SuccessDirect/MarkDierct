<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#213465</item>
        <item name="colorPrimaryDark">#213465</item>
        <item name="colorAccent">#213465</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="buttons_switch">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/cardview_dark_background</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="FacebookLoginButton">
        <item name="android:textSize">15sp</item>
        <item name="android:background">#3C5998</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Theme.MyActivityTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#0ed10e</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#1130a1</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">#ffed25</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>


</resources>
